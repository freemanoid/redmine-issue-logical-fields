<% if custom_field.type == 'IssueCustomField' %>
  <% if custom_field.format_in? 'compare' %>
    <p>
      <%= form.select :first_date_id, options_from_collection_for_select(IssueCustomField.where(field_format: 'date'), :id, :name) %>
    </p>
    <p>
      <%= form.select :operation_id, options_for_select(%w(< > <= >= =).map.with_index { |v, i| [v, i] }) %>
    </p>
    <p>
      <%= form.select :second_date_id, options_from_collection_for_select(IssueCustomField.where(field_format: 'date'), :id, :name) %>
    </p>
    <p>
      <%= form.text_field :true_message, required: true %>
    </p>
    <p>
      <%= form.text_field :false_message, required: true %>
    </p>

    <%= javascript_tag do %>
      $(document).ready(function() {
        $('#custom_field_regexp').parent().hide();
        $('#custom_field_min_length').parent().hide();
        $('#custom_field_default_value').parent().hide();
      })
    <% end %>

  <% end %>
<% end %>
