<% if custom_field.type == 'IssueCustomField' %>
  <% if custom_field.format_in? 'compare' %>
    <p>
      <%= form.collection_select :first_date_id, IssueCustomField.where(field_format: 'date'), :id, :name %>
      <%= form.collection_select :operation_id, %w(< > <= >= ==).map.with_index { |v, i| [i, v] }, :first, :last %>
      <%= form.collection_select :second_date_id, IssueCustomField.where(field_format: 'date'), :id, :name %>
    </p>
    <p>
      <%= form.text_field :true_message, required: true %>
    </p>
    <p>
      <%= form.text_field :false_message, required: true %>
    </p>

    <%= javascript_tag do %>
      $(document).ready(function() {
        $('#custom_field_regexp').parent().hide();
        $('#custom_field_min_length').parent().hide();
        $('#custom_field_default_value').parent().hide();
        $('#custom_field_is_required').parent().hide();
        $('#custom_field_searchable').parent().hide();
        $('#custom_field_is_filter').parent().hide();
      })
    <% end %>

  <% end %>
<% end %>
